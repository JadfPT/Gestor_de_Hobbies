<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.controllers.HobbiesController"
      spacing="15">

    <HBox spacing="10">
        <Label text="Hobbies" styleClass="card-title"/>
        <Region HBox.hgrow="ALWAYS"/>

        <TextField fx:id="txtPesquisar"
                   promptText="Procurar hobby..."
                   styleClass="search-field"/>

        <Button fx:id="btnEditar"
                text="Editar"
                styleClass="secondary-button"
                onAction="#onEditarHobby"/>

        <Button fx:id="btnApagar"
                text="Apagar"
                styleClass="secondary-button"
                onAction="#onApagarHobby"/>

        <Button text="+ Novo hobby"
                styleClass="primary-button"
                onAction="#onNovoHobby"/>
    </HBox>

    <VBox styleClass="welcome-card" spacing="10">
        <TableView fx:id="tblHobbies" prefHeight="400">
            <columns>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="200"/>
                <TableColumn fx:id="colCategoria" text="Categoria" prefWidth="120"/>
                <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="350"/>
            </columns>
        </TableView>
    </VBox>

</VBox>
