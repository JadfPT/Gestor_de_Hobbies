<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="ui.controllers.StatsController"
    spacing="15" styleClass="page">

    <HBox spacing="10" styleClass="page-header">
        <Label text="Estatísticas" styleClass="card-title"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="15" styleClass="stats-row">
        <VBox styleClass="stat-card">
            <Label fx:id="lblTotalSessoes" styleClass="stat-value"/>
            <Label text="Sessões registadas" styleClass="stat-label"/>
        </VBox>

        <VBox styleClass="stat-card">
            <Label fx:id="lblTotalMinutos" styleClass="stat-value"/>
            <Label text="Minutos totais" styleClass="stat-label"/>
        </VBox>

        <VBox styleClass="stat-card">
            <Label fx:id="lblDuracaoMedia" styleClass="stat-value"/>
            <Label text="Duração média" styleClass="stat-label"/>
        </VBox>

        <VBox styleClass="stat-card" spacing="8">
            <Label fx:id="lblHobbyTop" styleClass="stat-value-small" wrapText="true"/>
            <Label text="Hobby mais usado" styleClass="stat-label"/>
        </VBox>
    </HBox>

    <HBox spacing="18">
        <VBox styleClass="welcome-card" spacing="10" VBox.vgrow="ALWAYS" minWidth="0" HBox.hgrow="ALWAYS">
            <Label text="Sessões por hobby" styleClass="card-title"/>
            <BarChart fx:id="chartSessoesPorHobby"
                      prefHeight="300" minWidth="0" VBox.vgrow="ALWAYS">
                <xAxis>
                    <CategoryAxis label="Hobby"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Sessões"/>
                </yAxis>
            </BarChart>
        </VBox>

        <VBox styleClass="welcome-card" spacing="10" minWidth="0" HBox.hgrow="ALWAYS">
            <Label text="Tempo total por hobby" styleClass="card-title"/>

            <BarChart fx:id="chartTempoPorHobby"
                      prefHeight="220" minWidth="0" VBox.vgrow="ALWAYS">
                <xAxis>
                    <CategoryAxis label="Hobby"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Minutos"/>
                </yAxis>
            </BarChart>
        </VBox>
    </HBox>

    <VBox styleClass="welcome-card" spacing="10">
        <Label text="Sessões recentes" styleClass="card-title"/>
        <TableView fx:id="tblRecentes" prefHeight="240" minWidth="0">
            <columns>
                <TableColumn fx:id="colHobby" text="Hobby" prefWidth="200"/>
                <TableColumn fx:id="colData" text="Data" prefWidth="120"/>
                <TableColumn fx:id="colMinutos" text="Min" prefWidth="80"/>
            </columns>
        </TableView>
    </VBox>

</VBox>